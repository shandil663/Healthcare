<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bookedappointement">

    <TextView
        android:id="@+id/bookedappoint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Booked Appointments"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.03" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardfrombook"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.034">

        <ImageView
            android:id="@+id/imagebooked"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/backbutton" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="250sp"
        android:layout_height="100sp"
        android:layout_marginTop="20sp"
        app:cardCornerRadius="20sp"
        app:cardElevation="5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.869"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.089">

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="20sp"
            android:layout_marginTop="10sp"
            android:text="Name:"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/namepatient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="90sp"
            android:layout_marginTop="10sp"
            android:text="Sahil Shandil"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="38sp"
            android:layout_marginTop="37sp"
            android:text="Age:"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/agepatient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="90sp"
            android:layout_marginTop="37sp"
            android:text="20 Years"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/UID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="44sp"
            android:layout_marginTop="63sp"
            android:text="Uid:"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="90sp"
            android:layout_marginTop="63sp"
            android:text="Xyz146"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="115sp"
        android:layout_height="110sp"
        android:backgroundTint="@color/cardback"
        app:cardCornerRadius="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.052"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.112">

        <ImageView
            android:id="@+id/imageView6"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            app:srcCompat="@drawable/img_6" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="410sp"
        android:layout_height="600sp"
        android:layout_marginStart="10sp"
        android:layout_marginEnd="10sp"
        app:cardCornerRadius="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.526"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.945">

        <androidx.cardview.widget.CardView
            android:layout_width="390sp"
            android:layout_height="170sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10sp"
            app:cardCornerRadius="20sp"
            app:cardElevation="5sp">

            <View
                android:layout_width="300sp"
                android:layout_height="1dp"
                android:layout_marginStart="10sp"
                android:layout_marginTop="40sp"
                android:background="@android:color/darker_gray" />

            <View
                android:layout_width="300sp"
                android:layout_height="1dp"
                android:layout_marginStart="10sp"
                android:layout_marginTop="98sp"
                android:background="@android:color/darker_gray" />

            <View
                android:layout_width="300sp"
                android:layout_height="1dp"
                android:layout_marginStart="10sp"
                android:layout_marginTop="155sp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:text="Appointed Doctor:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/docnameid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="200sp"
                android:layout_marginTop="10sp"
                android:text="Dr.Bhomik"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="68sp"
                android:text="Doctor Id:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView15"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="105sp"
                android:layout_marginTop="68sp"
                android:text="E45uD"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="125sp"
                android:text="Speciality:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textView16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="110sp"
                android:layout_marginTop="125sp"
                android:text="Cardiologist"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_width="390sp"
            android:layout_height="170sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="200sp"
            app:cardCornerRadius="20sp"
            app:cardElevation="5sp">

            <View
                android:layout_width="300sp"
                android:layout_height="1dp"
                android:layout_marginStart="10sp"
                android:layout_marginTop="40sp"
                android:background="@android:color/darker_gray" />

            <View
                android:layout_width="300sp"
                android:layout_height="1dp"
                android:layout_marginStart="10sp"
                android:layout_marginTop="98sp"
                android:background="@android:color/darker_gray" />

            <View
                android:layout_width="300sp"
                android:layout_height="1dp"
                android:layout_marginStart="10sp"
                android:layout_marginTop="155sp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:id="@+id/textdomain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="10sp"
                android:text="Domain:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/illnessdomain"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120sp"
                android:layout_marginTop="10sp"
                android:text="Severe heart problem"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/texttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="68sp"
                android:text="Time Slot:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textslotid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120sp"
                android:layout_marginTop="68sp"
                android:text="11am to 12pm"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textroom"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10sp"
                android:layout_marginTop="125sp"
                android:text="Room Alloted:"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/textalot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="150sp"
                android:layout_marginTop="125sp"
                android:text="201/Level 2"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold" />
        </androidx.cardview.widget.CardView>

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="170sp"
            android:layout_height="170sp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="50dp"
            app:srcCompat="@drawable/img_33" />

        <TextView
            android:id="@+id/textView17"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="20sp"
            android:text="Scan to access appointment details"
            android:textAlignment="center"
            android:textColor="@color/text"
            android:textSize="20sp"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>