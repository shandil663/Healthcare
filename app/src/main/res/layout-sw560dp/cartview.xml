<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"


    >

    <TextView
        android:id="@+id/medname1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medicine name here"
        android:layout_marginTop="20sp"
        android:layout_gravity="start"
        android:textSize="15sp"
        android:textStyle="bold"
        android:foregroundGravity="center"
        android:textColor="@color/red1"
        android:layout_marginStart="20sp"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medicine Price:"
        android:textStyle="bold"
        android:foregroundGravity="center"
        android:textSize="15sp"
        android:layout_marginStart="20sp"
        android:textColor="@color/black"
        android:layout_gravity="start"
        android:layout_marginTop="55dp"/>
    <TextView
        android:id="@+id/qt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medicine Qunatity:"
        android:textStyle="bold"
        android:foregroundGravity="center"
        android:textSize="15sp"
        android:layout_marginStart="20sp"
        android:textColor="@color/black"
        android:layout_gravity="start"
        android:layout_marginTop="87dp"/>

    <TextView
        android:id="@+id/price1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200 rupees"
        android:textStyle="normal"
        android:foregroundGravity="center"
        android:textSize="10sp"
        android:layout_marginStart="135sp"
        android:textColor="@color/grey"
        android:layout_gravity="start"
        android:layout_marginTop="60dp"/>
    <TextView
        android:id="@+id/qt1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="10"
        android:textStyle="normal"
        android:foregroundGravity="center"
        android:textSize="10sp"
        android:layout_marginStart="155sp"
        android:textColor="@color/grey"
        android:layout_gravity="start"
        android:layout_marginTop="92dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="80sp"
        android:layout_height="80sp"
        app:cardCornerRadius="30sp"
        android:layout_margin="20sp"
        app:cardElevation="5sp"
        android:layout_gravity="center_horizontal|end"
        >

        <ImageView
            android:id="@+id/imgmedview1"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/img_34" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="40sp"
        android:layout_marginTop="170sp"
        android:layout_marginEnd="40sp" />



</androidx.cardview.widget.CardView>