<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".medicalhistory">
    <androidx.cardview.widget.CardView
        android:id="@+id/bacfrommed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        app:cardCornerRadius="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.03"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.034">

        <ImageView
            android:id="@+id/imagebookedmed"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/backbutton" />
    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="400dp"
        android:layout_height="136dp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="20sp"
        android:layout_marginEnd="10sp"
        app:cardCornerRadius="20sp"
        app:cardElevation="5sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.089">


        <androidx.cardview.widget.CardView
            android:layout_width="105sp"
            android:layout_height="100sp"
            android:layout_gravity="center_horizontal|start"
            android:layout_marginStart="10sp"
            android:layout_marginTop="15sp"
            android:layout_marginBottom="20sp"
            android:backgroundTint="@color/cardback"
            app:cardCornerRadius="50sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.052"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.112">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_gravity="center_horizontal"
                app:srcCompat="@drawable/img_6" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="150sp"
            android:layout_marginTop="17sp"
            android:text="Name:"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="230sp"
            android:layout_marginTop="17sp"
            android:text="Sahil Shandil"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="168sp"
            android:layout_marginTop="47sp"
            android:text="Age:"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="230sp"
            android:layout_marginTop="47sp"
            android:text="20 Years"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/UID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="174sp"
            android:layout_marginTop="80sp"
            android:text="Uid:"
            android:textSize="20sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/uid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="start"
            android:layout_marginStart="230sp"
            android:layout_marginTop="80sp"
            android:text="Xyz146"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Medical Profile"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.034" />


    <androidx.cardview.widget.CardView
        android:id="@+id/medicalcard"
        android:layout_width="400dp"
        android:layout_height="619dp"
        android:layout_marginStart="10sp"
        android:layout_marginTop="150sp"
        android:layout_marginEnd="10sp"
        android:elevation="40dp"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.508">


        <androidx.cardview.widget.CardView
            android:id="@+id/Test"
            android:layout_width="180dp"
            android:layout_marginLeft="10sp"
            android:layout_height="100dp"
            android:layout_marginTop="30sp"
            android:backgroundTint="@color/cardback"
            app:cardCornerRadius="20sp"
            app:cardElevation="5sp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="Test Reports"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="normal"

                />

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="5sp"
                app:srcCompat="@drawable/img_27"

                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cureddata"
            android:layout_width="180dp"
            android:layout_marginStart="210dp"
            android:layout_height="100dp"
            android:layout_marginTop="30sp"
            android:layout_marginEnd="30sp"
            android:backgroundTint="@color/cardback"
            app:cardCornerRadius="20sp"
            app:cardElevation="5sp"

            >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="Cured illness"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="normal" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="5dp"
                app:srcCompat="@drawable/img_28" />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/medicaldata1"
            android:layout_height="100dp"
            android:layout_width="180dp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="150sp"
            android:backgroundTint="@color/cardback"
            app:cardCornerRadius="20sp"
            app:cardElevation="5sp">

            <TextView
                android:id="@+id/textdetail1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="20dp"
                android:text="Medical Details"
                android:textAlignment="center"
                android:textSize="15sp"
                android:textStyle="normal"

                />

            <ImageView
                android:id="@+id/medicaldet1"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="bottom|center_horizontal"
                android:layout_marginBottom="5sp"
                app:srcCompat="@drawable/img_29"

                />
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/medical1"
            android:layout_width="180dp"
            android:layout_marginStart="210dp"
            android:layout_height="100dp"
            android:layout_marginTop="150sp"
            android:layout_marginEnd="20sp"
            android:backgroundTint="@color/cardback"
