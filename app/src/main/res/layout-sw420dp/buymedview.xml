<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="340sp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    android:padding="5dp"
    android:backgroundTint="@color/white"
    app:cardCornerRadius="10dp"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true"


    >

    <TextView
        android:id="@+id/medname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medicine name here"
        android:layout_marginTop="20sp"
        android:layout_gravity="start"
        android:textSize="20sp"
        android:textStyle="bold"
        android:foregroundGravity="center"
        android:textColor="@color/red1"
        android:layout_marginStart="20sp"
        />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Medicine Price:"
        android:textStyle="bold"
        android:foregroundGravity="center"
        android:textSize="20sp"
        android:layout_marginStart="20sp"
        android:textColor="@color/black"
        android:layout_gravity="start"
        android:layout_marginTop="65dp"/>

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="200 rupee"
        android:textStyle="normal"
        android:foregroundGravity="center"
        android:textSize="15sp"
        android:layout_marginStart="170sp"
        android:textColor="@color/grey"
        android:layout_gravity="start"
        android:layout_marginTop="70dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="100sp"
        android:layout_height="100sp"
        app:cardCornerRadius="30sp"
        android:layout_margin="20sp"
        app:cardElevation="5sp"
        android:layout_gravity="center_horizontal|end"

        >

        <ImageView
            android:id="@+id/imgmedview"
            android:layout_width="80sp"
            android:layout_height="80sp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/img_34" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="40sp"
        android:layout_marginTop="170sp"
        android:layout_marginEnd="40sp" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Discription of Medicine"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="170sp"
        android:foregroundGravity="center"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/addtocart"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginEnd="70sp"
        android:layout_marginBottom="15sp"
        android:text="Add to Cart" />

    <EditText
        android:id="@+id/getqt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/customedit"
        android:hint="Quantity"
        android:textAlignment="center"
        android:layout_marginBottom="15sp"
        android:layout_marginStart="70sp"
        android:layout_gravity="center_horizontal|bottom"
        android:padding="10sp"
        android:textSize="20sp"
        android:textStyle="normal"
        android:inputType="number" />
</androidx.cardview.widget.CardView>